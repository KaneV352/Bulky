@page
@model BulkyWeb_Razor.Pages.Categories.IndexModel

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6 text-primary">
            <h1>Category List</h1>
        </div>
        <div class="col-6 container text-end">
            <a asp-page="/categories/create" class="btn btn-primary">
                <i class="bi bi-plus-circle p"></i>  Create New Category
            </a>
            @* <a asp-controller="Category" asp-action="" class="btn btn-outline-danger">Remove</a> *@
        </div>
    </div>
	<table class="table table-bordered table-striped">
		<thead
	<tr>
		<th>Category Name</th>
		<th>Display Order</th>
			<th></th>
	</tr>
	</thead>
		<tbody>
			@foreach (var item in Model.CategoryList.OrderBy(c => c.DisplayOrder))
			{
				<tr>
					<td>@item.Name</td>
					<td>@item.DisplayOrder</td>
					<td>
						<div class="w-100 btn-group" role="group">
							<a asp-page="/categories/edit" asp-route-id="@item.Id" class="btn btn-outline-primary" mx-2>
								<i class="bi bi-pencil-square"></i> Edit
							</a>
							<a asp-page="/categories/delete" asp-route-id="@item.Id" class="btn btn-danger" mx-2>
								<i class="bi bi-trash"></i> Delete
							</a>
						</div>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>
