@model IEnumerable<Company>

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6 text-primary">
            <h1>Company List</h1>
        </div>
        <div class="col-6 container text-end">
            <a asp-controller="Company" asp-action="Upsert" class="btn btn-primary">
                <i class="bi bi-plus-circle p"></i>  Create New Company
            </a>
            @* <a asp-controller="Company" asp-action="" class="btn btn-outline-danger">Remove</a> *@
        </div>
    </div>
    <table id="tblData" class="table table-bordered table-striped" style="width:100%">
        <thead>
        <tr>
            <th>Name</th>
            <th>Street Address</th>
            <th>City</th>
            <th>State</th>
            <th>Postal Code</th>
            <th>Phone Number</th>
            <th></th>
        </tr>
        </thead>
    </table>
</div>

@section Scripts
{
    <script src="~/js/company.js"></script>
}