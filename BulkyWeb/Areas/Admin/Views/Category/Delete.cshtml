@model Category

<form method="post">
	<div class="border p-3 my-4">
		<div class="row pb-2"><h2>Delete category</h2></div>
		<hr/>
	</div>

	<input asp-for="Id" class="form-control" hidden/>
	<div class="mb-3 p-1 row">
		<label asp-for="Name" class="form-label p-0"></label>
		<input asp-for="Name" class="form-control" disabled/>
	</div>
	<div class="mb-3 p-1 row">
		<label asp-for="DisplayOrder" class="form-label p-0"></label>
		<input asp-for="DisplayOrder" class="form-control" disabled />
	</div>
	<div class="row">
		<div class="col-6 col-md-3">
			<button type="submit" class="btn btn-danger form-control">Delete</button>
		</div>
		<div class="col-6 col-md-3">
			<a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary form-control">Back To List</a>
		</div>
	</div>
</form>