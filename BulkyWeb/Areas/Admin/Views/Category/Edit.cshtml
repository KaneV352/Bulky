@model Category

<form method="post">
	<div class="border p-3 my-4">
		<div class="row pb-2"><h2>Edit category</h2></div>
		<hr/>
	</div>

	<div asp-validation-summary="ModelOnly"></div>
	<div class="mb-3 p-1 row">
		<label asp-for="Name" class="form-label p-0"></label>
		<input asp-for="Name" class="form-control"/>
		<span asp-validation-for="Name" class="text-danger"></span>
	</div>
	<div class="mb-3 p-1 row">
		<label asp-for="DisplayOrder" class="form-label p-0"></label>
		<input asp-for="DisplayOrder" class="form-control" />
		<span asp-validation-for="DisplayOrder" class="text-danger"></span>
	</div>
	<div class="row">
		<div class="col-6 col-md-3">
			<button type="submit" class="btn btn-primary form-control">Confirm</button>
		</div>
		<div class="col-6 col-md-3">
			<a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary form-control">Back To List</a>
		</div>
	</div>
</form>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}